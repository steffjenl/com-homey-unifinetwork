{
  "id": "wifi-client",
  "name": {
    "en": "Wifi Client",
    "nl": "Wifi Client",
    "es": "Cliente Wifi"
  },
  "mobile": {
    "components": [
      {
        "id": "icon"
      },
      {
        "id": "sensor",
        "capabilities": [
          "alarm_connected",
          "measure_signal",
          "measure_rssi"
        ],
        "options": {
          "icons": {
            "alarm_connected": "assets/connected.svg",
            "measure_signal": "assets/signal.svg",
            "measure_rssi": "assets/rssi.svg"
          },
          "alarm_connected": {
            "noblink": false,
            "invert": true,
            "label": {
              "true": {
                "en": "Connected",
                "es": "Conectado"
              },
              "false": {
                "en": "Disconnected",
                "es": "Desconectado"
              }
            }
          }
        }
      }
    ]
  },
  "images": {
    "large": "drivers/wifi-client/assets/images/large.jpg",
    "small": "drivers/wifi-client/assets/images/small.jpg"
  },
  "class": "sensor",
  "capabilities": [
    "alarm_connected",
    "measure_rssi",
    "measure_signal"
  ],
  "pair": [
    {
      "id": "validate"
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ]
}
